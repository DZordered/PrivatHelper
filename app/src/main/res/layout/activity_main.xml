<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.denis.privathelper.MainActivity"
    android:addStatesFromChildren="true"
    android:background="@color/colorPrimaryDark">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/gridLay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Get depatments in city:"
            android:id="@+id/getDepsInfo"
            android:layout_row="0"
            android:layout_column="1" />

        <EditText
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:id="@+id/editCity"
            android:layout_row="0"
            android:layout_column="14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="address:"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:id="@+id/editAddress"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get"
            android:id="@+id/getStatementsButton"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info"
            android:id="@+id/toInfoButton"
            android:layout_row="3"
            android:layout_column="14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Get all  ATM&apos;s in city:"
            android:id="@+id/textView2"
            android:layout_row="4"
            android:layout_column="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editAtmCity"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="address:"
            android:id="@+id/textView3"
            android:layout_row="5"
            android:layout_column="1" />

        <EditText
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:id="@+id/editAtmAddress"
            android:layout_row="6"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get"
            android:id="@+id/getAtmsButton"
            android:layout_row="7"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info"
            android:id="@+id/toInfoAtmButton"
            android:layout_row="7"
            android:layout_column="14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Get terminals in city:"
            android:id="@+id/textView4"
            android:layout_row="8"
            android:layout_column="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTerminalsCity"
            android:layout_row="8"
            android:layout_column="14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="address:"
            android:id="@+id/textView5"
            android:layout_row="9"
            android:layout_column="1" />

        <EditText
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTerminalAddress"
            android:layout_row="10"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get"
            android:id="@+id/getTerminalsInfo"
            android:layout_row="11"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info"
            android:id="@+id/toTerminalInfo"
            android:layout_row="11"
            android:layout_column="14" />

    </GridLayout>
</RelativeLayout>
